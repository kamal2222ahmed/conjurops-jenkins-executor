{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "instance_type": "m3.medium",
    "git_hash": "{{env `GIT_HASH`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "ami_description": "Conjur Jenkins slave",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-9eaa1cf6",
    "instance_type": "{{user `instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "jenkins-slave-{{timestamp}}",
    "launch_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "snapshot_id": "snap-1f806dbb",
      "volume_size": 120
    }],
    "tags": {
      "git_hash": "{{user `git_hash`}}",
      "conjur/app": "conjurops-jenkins-slave"
    }
  }],
  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": [".vendor/cookbooks"],
    "run_list": ["conjurops-jenkins-slave"]
  },
  {
    "type": "shell",
    "inline": [
      "sudo apt-get purge -y chef",
      "sudo rm -rf /opt/chef",
      "sudo dpkg-reconfigure chefdk"
    ]
  }]
}
